generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prefeitura {
  id_prefeitura  Int      @id
  razao_social   String?  @db.VarChar(150)
  nome_fantasia  String?  @db.VarChar(150)
  cnpj           String?  @db.VarChar(14)
  ativo          Boolean?
  path_portal    String?  @db.VarChar(150)
  
  // Relação com Dashboard
  dashboards     Dashboard[]
}

model Dashboard {
  id              String      @id @default(uuid())
  pais            String
  estado          String
  sexo            String
  dataNascimento  DateTime    @db.Date
  quantidadeTaxa  Int
  totalTaxa       Decimal     @db.Decimal(10, 2)
  dataPasseio     DateTime    @db.Date
  dataCompra      DateTime    @db.Date
  criadoEm        DateTime    @default(now())
  prefeitura_id   Int?
  path_portal     String?     @db.VarChar(150)
  
  // Relação com Prefeitura
  prefeitura      Prefeitura?  @relation(fields: [prefeitura_id], references: [id_prefeitura])
}
